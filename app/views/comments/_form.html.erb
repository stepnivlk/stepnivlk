<div class="block">
  <div class="pfblock-header wow fadeInUp">
    <h4 class="pfblock-title">Novy komentář</h4>
    <div class="pfblock-line"></div>
  </div>



  <div class="form-area"> 
    <%= form_for [ @post, @comment ] do |f| %>
  <% if @comment.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@comment.errors.count, "error") %>.
    </div>
    <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>


      <div class="form-group">
        <div class="input-group">
          <%= f.label :author, "Jméno:" %><br/>
          <%= f.text_field :author, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group col-xs-12">
          <%= f.label :body, "Komentář:" %><br/>
          <%= f.text_area :body, rows: "4", maxlength: "140", class: "form-control"  %>
        </div>
      </div>

      <%= recaptcha_tags %>
      <%= f.submit 'Odeslat', class: "btn btn-default" %>

    <% end %>
  </div>
</div>