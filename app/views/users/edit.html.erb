<section class="pfblock">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="box">
      <div class="pfblock-header wow fadeInUp">
        <h3 class="pfblock-title">Upravit uzivatele</h3>
        <div class="pfblock-line"></div>
      </div>

<div class="form-area"> 
  <%= form_for(@user, html: { multipart: true }) do |f| %>

    <% if @user.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@user.errors.count, "error") %>.
        </div>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

<div class="row">
  <div class="col-sm-6">

    <div class="form-group">
      <div class="input-group col-xs-8">
        <%= f.label :name, "Nick:" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group col-xs-8">
        <%= f.label :real_name, "Jmeno:" %>
        <%= f.text_field :real_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group col-xs-8">
        <%= f.label "Email:" %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group col-xs-8">
        <%= f.label "Telefon:" %>
        <%= f.text_field :phone, class: 'form-control' %>
      </div>
    </div>


    <div class="form-group">
      <div class="input-group col-xs-8">
        <%= f.label :birth_date, "Datum narozeni:" %><br>
        <%= f.date_select :birth_date, class: "form-control", start_year: 1920 %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group col-xs-8">
      <%= f.label :avatar, "Avatar:" %>
    <%= f.file_field :avatar %>
    </div>
    </div>

    <div class="form-group">
      <div class="input-group col-xs-8">
        <%= f.label :password, "Heslo:" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group col-xs-8">
        <%= f.label :password_confirmation, "Potvrzeni hesla:" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>

    </div>

    <div class="col-sm-6">
        <strong>Kratke info:</strong>

      <%= f.nested_fields_for :simple_user_infos do |i| %>
        <div class="row">
        <div class="form-group">
        <div class="input-group col-md-12">
          <div class="col-xs-10">
            <%= i.text_field :info, class: 'form-control' %>
          </div>
          <div class="col-xs-1">
            <%= i.remove_nested_fields_link fa_icon("remove") %>
          </div>
        </div>
        </div>
        </div>
      <% end %>
      <%= f.add_nested_fields_link :simple_user_infos, fa_icon("plus") %>
    </div>
    </div>

    <hr>

        <strong>Kompetence </strong>
        <div class="row">
        <div class="col-sm-5">
        skill:
        </div>
        <div class="col-sm-3">
        skill index:
        </div>
        <div class="col-sm-3">
        in love index:
        </div>
        </div>
      <%= f.nested_fields_for :skills do |s| %>
    <div class="row">
        <div class="form-group">
          <div class="input-group col-md-12 ">
            <div class="col-xs-5">
            <%= s.text_field :skill, class: 'form-control' %>
            </div>
            <div class="col-xs-3">
            <%= s.range_field :skill_index, min: 0, max: 10, class: "form-control" %>
            </div>
            <div class="col-xs-3">
            <%= s.range_field :in_love_index, min: 0, max: 10, class: "form-control" %>
            </div>
            <div class="col-xs-1">
            <%= s.remove_nested_fields_link fa_icon("remove"), class: "" %>
            </div>
          </div>
        </div>

      <% end %>
      <%= f.add_nested_fields_link :skills, fa_icon("plus") %>
    </div>

    <hr>

    <strong>Vzdelani </strong>
    <%= f.nested_fields_for :educations do |e| %>
      <div class="row">

        <div class="col-md-12">
        <div class="form-group">
          <div class="input-daterange input-group col-md-6">
              <%= e.text_field :start, class: ' form-control' %>
              <span class="input-group-addon">do</span>
              <%= e.text_field :end, class: 'form-control', id: 'schooldate' %>

            </div>
          </div>
        </div>
            <div class="col-xs-4">
              <%= e.text_field :name, class: 'form-control' %> 
            </div>

            </div> 
      </div>
    <% end %>
      <%= f.add_nested_fields_link :educations, fa_icon("plus") %>


      <%= f.submit 'Odeslat', class: "btn btn-default push-right"  %>



  <% end %>
</div>

    </div>
  </div>
</section>