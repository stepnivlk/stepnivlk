<header class="header">

  <nav class="navbar navbar-custom" role="navigation">

    <div class="container">

      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#custom-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to root_path, class: "navbar-brand" do %><span><%= image_tag("vlk2.png", alt: "logo") %></span> Stepní Vlk<% end %>
      </div>

      <div class="collapse navbar-collapse" id="custom-collapse">
        <ul class="nav navbar-nav navbar-right">
          <%= content_tag :li, link_to("Domů", root_path(anchor: "firstinfo")), class: ("active" if current_page?(root_path))  %>
          <%= content_tag :li, link_to("Nástěnka", stream_path), class: active_page(stream_path)  %>
          <%= content_tag :li, link_to("Blog", posts_path), class: active_page(posts_path)  %>
          <%= content_tag :li, link_to("Galerie", galleries_path), class: active_page(galleries_path)  %>

          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" class="user-icon"><%= image_tag current_user.avatar.url(:thumb), alt: "current_user", class: "user-icon-img" %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <%= content_tag :li, link_to(fa_icon("user") + " Profil", current_user)%>
                <li><a href="#"><%= fa_icon("wrench") %> Nastavení</a></li>
                <li class="divider"></li>
                <%= content_tag :li, link_to(fa_icon("file") + " Nový zápisek", new_post_path) %>
                <%= content_tag :li, link_to(fa_icon("image") + " Nová galerie", new_gallery_path) %>
                <li class="divider"></li>
                <%= content_tag :li, link_to(fa_icon("sign-out") + " Odhlásit", logout_path, method: "delete")%>
              </ul>
            </li>
          <% else %>
            <%= content_tag :li, link_to((fa_icon "unlock"), login_path), class: ("active" if current_page?(login_path)) %>
          <% end %>

        </ul>
      </div>

    </div><!-- .container -->

  </nav>

</header>