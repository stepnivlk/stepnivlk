<%= form_for(@post, html: { multipart: true }) do |f| %>
  <ul>
    <% @post.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, cols: "100", rows: "10" %>
  </p>

  <p>
  <%= f.label :tag_list %><br>
  <%= f.text_field :tag_list %>
  </p>


  <p>
    <%= f.submit %>
  </p>


<% end %>