<% provide(:title, 'Galerie') %>

<section class="pfblock-gray">
  <div class="container">

    <div class="row">
      <div class="col-sm-4 col-sm-offset-4 text-center">
        <div class="text-center">
          <ol class="breadcrumb">
            <li>
              <%= link_to root_path( anchor: "firstinfo" )  do %>
                <%= fa_icon "home" %>
              <% end %>
            </li>
            <li class="active">Galerie</li>
            <li>
              <%= link_to new_gallery_path, class: "", data: { toggle: "modal", remote: true, target: '#gallery-upload' } do %>
                <%= fa_icon "plus" %>
              <% end %>
            </li>
          </ol>
        </div>
      </div>
    </div>
  
    <%= render 'new_modal' %>

    <div class="pfblock" id="galleries-list">
      <%= render @galleries %>
    </div>

    <div class="col-sm-4 col-sm-offset-4 text-center">
      <%= will_paginate @galleries, previous_label: fa_icon("chevron-left"), next_label: fa_icon("chevron-right") %>
    </div>

  </div>
</section>
